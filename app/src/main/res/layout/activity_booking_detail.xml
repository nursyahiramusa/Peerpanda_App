<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_all1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="550dp"
        android:orientation="vertical"
        android:layout_margin="50dp"
        android:id="@+id/logo"
        >

        <ImageView

            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:src="@drawable/peerpandalogo"
            />
        <TextView
            android:id="@+id/tv_create_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="1dp"
            android:layout_gravity="center"
            android:text="Booking Detail"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_30second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="1dp"
            android:layout_gravity="center"
            android:text="1 more step and your booking will be submit!"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/phoneno"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="1dp"
            android:layout_gravity="center"
            android:background="@drawable/button_white_stroke"
            android:hint="  Phone No."
            android:textColor="@color/black"
            android:textSize="14sp"
            android:inputType="textCapWords"
            android:drawableLeft="@drawable/ic_iphone"
            />

        <EditText
            android:id="@+id/datetime"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/button_white_stroke"
            android:drawableLeft="@drawable/ic_calendar"
            android:hint="  Select Date and Time"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:inputType="date"
            />

        <EditText
            android:id="@+id/location"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="1dp"
            android:layout_gravity="center"
            android:background="@drawable/button_white_stroke"
            android:hint="  Location"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:inputType="textCapWords"
            android:drawableLeft="@drawable/ic_loc"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="17dp">

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="135dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill_vertical"
            android:layout_weight="1"
            android:background="@drawable/button_rectangle_blue"
            android:text="Submit"/>
    </LinearLayout>



</RelativeLayout>