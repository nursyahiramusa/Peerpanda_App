<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/login_bg5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="550dp"
        android:orientation="vertical"
        android:layout_margin="50dp"
        android:id="@+id/logo"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:src="@drawable/img_user"
            />

            <Button
                android:id="@+id/btnPicture"
                android:layout_marginTop="-10dp"
                android:layout_width="100dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:background="@drawable/button_rectangle_yello"
                android:textSize="10sp"
                android:text="Change Picture"
                android:textAllCaps="false"/>

        <TextView
            android:id="@+id/tv_create_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="1dp"
            android:layout_gravity="center"
            android:text="Edit Profile"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/edtName"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rectangle_white"
            android:hint="  Student Name"
            android:textColor="@color/greytext"
            android:textSize="14sp"
            android:inputType="text"
            android:alpha="0.8"
            android:drawableLeft="@drawable/ic_person"
            />

        <EditText
            android:id="@+id/edtStuID"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="1dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rectangle_white"
            android:hint="  Student ID"
            android:textColor="@color/greytext"
            android:textSize="14sp"
            android:inputType="number"
            android:alpha="0.8"
            android:drawableLeft="@drawable/ic_id"
            />
        <EditText
            android:id="@+id/edtCourse"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rectangle_white"
            android:hint="  Programme Code"
            android:textColor="@color/greytext"
            android:textSize="14sp"
            android:alpha="0.8"
            android:drawableLeft="@drawable/ic_course"
            android:textAllCaps="true"
            android:inputType="textCapCharacters"
            />
        <EditText
            android:id="@+id/edtSem"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="1dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rectangle_white"
            android:hint="  Current Semester"
            android:textColor="@color/greytext"
            android:textSize="14sp"
            android:inputType="number"
            android:alpha="0.8"
            android:drawableLeft="@drawable/ic_sem"
            />
        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_margin="1dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_margin="7dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:text="Gender"
                android:textSize="14sp"
                />
            <RadioGroup
                android:id="@+id/edtGen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_margin="0dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_toRightOf="@+id/tv_gender">
                <RadioButton
                    android:id="@+id/male_radio_btn"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:checked="true"
                    android:buttonTint="@android:color/white"
                    />
                <RadioButton
                    android:id="@+id/female_radio_btn"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text = "Female"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:buttonTint="@android:color/white"
                    />
            </RadioGroup>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_chnge_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Change Password"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtPass"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rectangle_white"
            android:hint="  Password"
            android:textColor="@color/greytext"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:alpha="0.8"
            android:drawableLeft="@drawable/ic_key"
            />
        <EditText
            android:id="@+id/edtCPass"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="1dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rectangle_white"
            android:hint="  Confirm Password"
            android:textColor="@color/greytext"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:alpha="0.8"
            android:drawableLeft="@drawable/ic_key"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="17dp">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="135dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill_vertical"
            android:layout_weight="1"
            android:background="@drawable/button_rectangle_blue"
            android:text="Save"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="13dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="135dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill_vertical"
            android:layout_weight="1"
            android:background="@drawable/button_rectangle_yello"
            android:text="Cancel"/>
    </LinearLayout>



</RelativeLayout>