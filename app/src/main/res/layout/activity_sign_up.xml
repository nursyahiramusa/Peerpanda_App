<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:background="@drawable/login_bg5"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="550dp"
    android:orientation="vertical"
    android:layout_margin="50dp"
    android:id="@+id/logo"
    >

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:src="@drawable/peerpandalogo"
        />
    <TextView
        android:id="@+id/tv_create_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="1dp"
        android:layout_gravity="center"
        android:text="Create Account"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_30second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="1dp"
        android:layout_gravity="center"
        android:text="Hardly takes more than 1 minutes"
        android:textSize="15sp"/>


    <EditText
        android:id="@+id/edtName"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:background="@drawable/button_rectangle_white"
        android:hint="  Student Name"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:inputType="text"
        android:alpha="0.8"
        android:drawableLeft="@drawable/ic_person"

        />

    <EditText
        android:id="@+id/edtStuID"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_margin="1dp"
        android:layout_gravity="center"
        android:background="@drawable/button_rectangle_white"
        android:hint="  Student ID"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:inputType="number"
        android:alpha="0.8"
        android:drawableLeft="@drawable/ic_id"
        />
    <EditText
        android:id="@+id/edtCourse"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:background="@drawable/button_rectangle_white"
        android:hint="  Programme Code"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:alpha="0.8"
        android:drawableLeft="@drawable/ic_course"
        android:textAllCaps="true"
        android:inputType="textCapCharacters"
        />
    <EditText
        android:id="@+id/edtSem"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_margin="1dp"
        android:layout_gravity="center"
        android:background="@drawable/button_rectangle_white"
        android:hint="  Current Semester"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:inputType="number"
        android:alpha="0.8"
        android:drawableLeft="@drawable/ic_sem"
        />
    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="28dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/button_rectangle_white"
        android:backgroundTint="@color/white"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:alpha="0.8"
        >
        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:alpha="0.8"
            android:entries="@array/gen_array"
            android:prompt="@string/gen_prompt" />
    </RelativeLayout>
    <EditText
        android:id="@+id/edtphoneno"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:background="@drawable/button_rectangle_white"
        android:hint="  Phone No."
        android:textColor="@color/black"
        android:textSize="14sp"
        android:inputType="number"
        android:alpha="0.8"
        android:drawableLeft="@drawable/phone"
        />
    <EditText
        android:id="@+id/edtPass"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:background="@drawable/button_rectangle_white"
        android:hint="  Password"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:alpha="0.8"
        android:drawableLeft="@drawable/ic_key"
        />
    <!--EditText
        android:id="@+id/edtCPass"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_margin="1dp"
        android:layout_gravity="center"
        android:background="@drawable/button_rectangle_white"
        android:hint="  Confirm Password"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:alpha="0.8"
        android:drawableLeft="@drawable/ic_key"
        /-->
    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="14sp"/>

</LinearLayout>

<LinearLayout
    android:layout_width="135dp"
    android:layout_height="80dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="17dp">

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="135dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="fill_vertical"
        android:layout_weight="1"
        android:background="@drawable/button_rectangle_blue"
        android:text="Sign Up"/>
</LinearLayout>



</RelativeLayout>