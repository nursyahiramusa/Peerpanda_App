<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/login_bg5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/logo"
        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:src="@drawable/peerpandalogo"
            />
        <TextView
            android:id="@+id/tv_tutor_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="-15dp"
            android:layout_gravity="center"
            android:text="Request Tutor "
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/name"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="1dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rectangle_white"
            android:hint="  Name"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="13sp"
            android:inputType="none"
            android:editable="false"
            android:alpha="1"
            android:drawableLeft="@drawable/ic_person"
            />
        <EditText
            android:id="@+id/campus"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rectangle_white"
            android:hint="  Campus"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="13sp"
            android:inputType="textCapWords"
            android:alpha="1"
            android:drawableLeft="@drawable/building"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            />
        <EditText
            android:id="@+id/course"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rectangle_white"
            android:hint="  Programme"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="13sp"
            android:inputType="none"
            android:editable="false"
            android:alpha="1"
            android:drawableLeft="@drawable/major"
            />
        <EditText
            android:id="@+id/sem"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="1dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rectangle_white"
            android:hint="  Sem"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="13sp"
            android:inputType="none"
            android:editable="false"
            android:alpha="1"
            android:drawableLeft="@drawable/ic_id"
            />
        <EditText
            android:id="@+id/gender"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rectangle_white"
            android:hint="  Gender"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="13sp"
            android:inputType="none"
            android:editable="false"
            android:alpha="1"
            android:drawableLeft="@drawable/gender"
            android:clickable="false"



            />
        <EditText
            android:id="@+id/phoneno"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="1dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rectangle_white"
            android:hint="  Phone No."
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="13sp"
            android:inputType="none"
            android:editable="false"
            android:alpha="1"
            android:drawableLeft="@drawable/phone"
            />
        <EditText
            android:id="@+id/courseTch"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rectangle_white"
            android:hint="  Course Code to Teach"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="13sp"
            android:inputType="textCapCharacters"
            android:alpha="1"
            android:drawableLeft="@drawable/ic_course"
            android:textAllCaps="true"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            />
        <EditText
            android:id="@+id/coursename"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="1dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rectangle_white"
            android:hint="  Course Name"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="13sp"
            android:inputType="textCapSentences"
            android:alpha="1"
            android:drawableLeft="@drawable/ic_sem"
            android:outlineSpotShadowColor="@color/black"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            />
        <EditText
            android:id="@+id/courseGrade"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rectangle_white"
            android:hint="  Course Grade"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="13sp"
            android:inputType="textCapCharacters"
            android:alpha="1"
            android:drawableLeft="@drawable/ic_alphabet"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            />
        <EditText
            android:id="@+id/price"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="1dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rectangle_white"
            android:hint="  Payment"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="13sp"
            android:inputType="number"
            android:alpha="1"
            android:drawableLeft="@drawable/cash"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="-10dp">

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="135dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill_vertical"
            android:layout_weight="1"
            android:background="@drawable/button_rectangle_blue"
            android:text="Submit"
            android:textSize="14dp"/>

    </LinearLayout>

</RelativeLayout>